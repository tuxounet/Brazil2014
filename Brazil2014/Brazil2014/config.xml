<?xml version='1.0' encoding='utf-8'?>
<widget xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps" id="fr.krux.mobile.apps.brazil2014" version="1.0.0.0" xmlns="http://www.w3.org/ns/widgets">
  <name>Brazil 2014</name>
